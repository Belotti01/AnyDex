@using System.ComponentModel.DataAnnotations

<_MudGridTemplate Justify="Justify.SpaceEvenly" Type="Type">
	<MudItem xs="@(StackIfSmall ? _fullSpan : _halfSpan)" 
			 sm="@(StackIfSmall ? _fullSpan : _halfSpan)" 
			 md="_halfSpan" 
			 lg="_halfSpan" 
			 xl="_halfSpan" 
			 xxl="_halfSpan"
			 Class="w-100 overflow-scroll text-wrap">
		@LeftColumn
	</MudItem>
	<MudItem xs="@(StackIfSmall ? _fullSpan : _halfSpan)" 
			 sm="@(StackIfSmall ? _fullSpan : _halfSpan)" 
			 md="_halfSpan" 
			 lg="_halfSpan" 
			 xl="_halfSpan" 
			 xxl="_halfSpan"
			 Class="w-100 overflow-scroll text-wrap">
		@RightColumn
	</MudItem>
</_MudGridTemplate>

@code {
	protected int _halfSpan { get; set; } = 6;
	protected int _fullSpan { get; set; } = 12;

	[Parameter, Required]
	public RenderFragment? LeftColumn { get; set; }
	[Parameter, Required]
	public RenderFragment? RightColumn { get; set; }
	[Parameter]
	public GridType Type { get; set; } = GridType.Dense;
	[Parameter]
	public bool StackIfSmall { get; set; } = true;
	[Parameter]
	public bool StackIfExtraSmall { get; set; } = true;
}
