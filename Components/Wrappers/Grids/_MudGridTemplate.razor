<MudGrid Justify="@Justify" Spacing="_spacing">
	@ChildContent
</MudGrid>

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	[Parameter]
	public Justify Justify { get; set; } = Justify.Center;
	[Parameter]
	public GridType Type { get; set; } = GridType.Dense;

	protected int _spacing = 2;

	protected override void OnInitialized() {
		base.OnInitialized();
		SetSize(Type);
		StateHasChanged();
	}

	public void SetSize(GridType type) {
		(_spacing) = type switch {
			GridType.Dense => (1),
			_ => (3)
		};
	}
}
